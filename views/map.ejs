    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize the dormitory slider
            initializeDormitorySlider();
            
            // Add direct event listeners to navigation buttons
            document.getElementById('prevSlideBtn').addEventListener('click', function() {
                navigateSlide('prev');
            });
            
            document.getElementById('nextSlideBtn').addEventListener('click', function() {
                navigateSlide('next');
            });
        });
        
        let currentSlideIndex = 0;
        let dormitoryData = [];
        
        // Navigation function
        function navigateSlide(direction) {
            if (direction === 'prev') {
                goToSlide(currentSlideIndex - 1);
            } else {
                goToSlide(currentSlideIndex + 1);
            }
        }
        
        function initializeDormitorySlider() {
            console.log("Initializing dormitory slider...");
            
            // Fetch dormitory data from API
            fetch('/api/map-data')
                .then(response => response.json())
                .then(dormitories => {
                    console.log("Fetched dormitories:", dormitories.length);
                    
                    if (dormitories && dormitories.length > 0) {
                        dormitoryData = dormitories;
                        createSlides(dormitories);
                        
                        // Update background with first slide
                        updateBackgroundImage(dormitories[0].imageUrl || '/image/camp1.png');
                        
                        // Start auto-rotation after a delay
                        setTimeout(startAutoRotation, 1000);
                    } else {
                        console.warn('No dormitories found');
                        // Display a message or handle empty data case
                    }
                })
                .catch(error => {
                    console.error('Error fetching dormitories:', error);
                    // Display error message
                });
        }
        
        function createSlides(dormitories) {
            console.log("Creating slides for", dormitories.length, "dormitories");
            
            const sliderWrapper = document.getElementById('sliderWrapper');
            const pagination = document.getElementById('sliderPagination');
            
            if (!sliderWrapper || !pagination) {
                console.error("Required DOM elements not found");
                return;
            }
            
            // Clear any existing content
            sliderWrapper.innerHTML = '';
            pagination.innerHTML = '';
            
            // Create slides for each dormitory
            dormitories.forEach((dorm, index) => {
                // Create slide
                const slide = document.createElement('div');
                slide.className = 'slide';
                
                // Set background image - use dorm.imageUrl or a placeholder
                const imageUrl = dorm.imageUrl || '/image/camp1.png';
                slide.style.backgroundImage = `url('${imageUrl}')`;
                
                // Add to wrapper
                sliderWrapper.appendChild(slide);
                
                // Create pagination dot
                const dot = document.createElement('div');
                dot.className = 'pagination-dot';
                if (index === 0) dot.classList.add('active');
                
                // Add click event to dot
                dot.addEventListener('click', function() {
                    goToSlide(index);
                });
                
                pagination.appendChild(dot);
                
                // If it's the first slide, update the info card
                if (index === 0) {
                    updatePropertyInfo(dorm);
                }
            });
            
            console.log("Created", sliderWrapper.children.length, "slides");
        }
        
        function updatePropertyInfo(dorm) {
            // Update basic info
            document.getElementById('propertyTitle').textContent = dorm.name || '';
            document.getElementById('propertyAddress').textContent = dorm.address || '';
            
            // Format price range
            let priceText = '';
            if (dorm.details && dorm.details.priceRange) {
                const min = dorm.details.priceRange.min.toLocaleString();
                const max = dorm.details.priceRange.max.toLocaleString();
                priceText = `${min} - ${max} VNĐ/tháng`;
            }
            document.getElementById('propertyPrice').textContent = priceText;
            
            // Translate category
            let categoryText = '';
            if (dorm.details && dorm.details.category) {
                switch(dorm.details.category) {
                    case 'basic': categoryText = 'Khu cơ bản'; break;
                    case 'premium': categoryText = 'Khu cao cấp'; break;
                    case 'international': categoryText = 'Khu du học sinh'; break;
                    default: categoryText = dorm.details.category;
                }
            }
            document.getElementById('propertyCategory').textContent = categoryText;
            
            // Calculate capacity
            let capacityText = '';
            if (dorm.floors && dorm.floors.length > 0) {
                let totalRooms = 0;
                let totalCapacity = 0;
                
                dorm.floors.forEach(floor => {
                    if (floor.rooms && floor.rooms.length > 0) {
                        totalRooms += floor.rooms.length;
                        floor.rooms.forEach(room => {
                            totalCapacity += room.maxCapacity || 0;
                        });
                    }
                });
                
                capacityText = `${totalRooms} phòng, ${totalCapacity} sinh viên`;
            }
            document.getElementById('propertyCapacity').textContent = capacityText;
            
            // Update amenities
            const amenitiesContainer = document.getElementById('propertyAmenities');
            if (amenitiesContainer) {
                amenitiesContainer.innerHTML = '';
                
                if (dorm.details && dorm.details.amenities && dorm.details.amenities.length > 0) {
                    // Display up to 6 amenities
                    const displayAmenities = dorm.details.amenities.slice(0, 6);
                    
                    displayAmenities.forEach(amenity => {
                        const tag = document.createElement('span');
                        tag.className = 'amenity-tag';
                        tag.textContent = amenity;
                        amenitiesContainer.appendChild(tag);
                    });
                }
            }
            
            // Update registration button
            const registerButton = document.getElementById('registerButton');
            if (registerButton && dorm._id) {
                registerButton.href = `/register?dormId=${dorm._id}`;
            }
        }
        
        function updateBackgroundImage(imageUrl) {
            const background = document.querySelector('.showcase-background');
            if (background) {
                background.style.backgroundImage = `url('${imageUrl}')`;
            }
        }
        
        function startAutoRotation() {
            // Auto rotate slides every 7 seconds
            setInterval(function() {
                goToSlide(currentSlideIndex + 1);
            }, 7000);
        }
        
        function goToSlide(index) {
            console.log("Going to slide:", index);
            
            const slides = document.querySelectorAll('.slide');
            const sliderWrapper = document.getElementById('sliderWrapper');
            const dots = document.querySelectorAll('.pagination-dot');
            
            if (!slides.length || !sliderWrapper) {
                console.error("Required DOM elements not found for slide navigation");
                return;
            }
            
            // Calculate the actual index with wrap-around
            const totalSlides = slides.length;
            const newIndex = ((index % totalSlides) + totalSlides) % totalSlides; // Ensure positive value
            
            console.log("New slide index:", newIndex, "Total slides:", totalSlides);
            
            // Update current slide index
            currentSlideIndex = newIndex;
            
            // Move the slider
            sliderWrapper.style.transform = `translateX(-${currentSlideIndex * 100}%)`;
            
            // Update pagination dots
            dots.forEach((dot, i) => {
                if (i === currentSlideIndex) {
                    dot.classList.add('active');
                } else {
                    dot.classList.remove('active');
                }
            });
            
            // Update info card with current dormitory data
            if (dormitoryData && dormitoryData.length > currentSlideIndex) {
                const currentDorm = dormitoryData[currentSlideIndex];
                updatePropertyInfo(currentDorm);
                updateBackgroundImage(currentDorm.imageUrl || '/image/camp1.png');
            }
        }
    </script>
