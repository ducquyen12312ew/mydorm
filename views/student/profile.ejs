    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Tab switching
            const tabs = document.querySelectorAll('.profile-tab');
            const contents = document.querySelectorAll('.tab-content');
            
            tabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    const target = this.getAttribute('data-tab');
                    
                    // Remove active class from all tabs and contents
                    tabs.forEach(t => t.classList.remove('active'));
                    contents.forEach(c => c.classList.remove('active'));
                    
                    // Add active class to current tab and content
                    this.classList.add('active');
                    document.getElementById(target).classList.add('active');
                });
            });
            
            // Toggle edit personal info form
            const editPersonalInfoBtn = document.getElementById('editPersonalInfoBtn');
            const editPersonalInfoForm = document.getElementById('editPersonalInfoForm');
            const cancelEditPersonalInfo = document.getElementById('cancelEditPersonalInfo');
            
            if (editPersonalInfoBtn && editPersonalInfoForm && cancelEditPersonalInfo) {
                editPersonalInfoBtn.addEventListener('click', function() {
                    editPersonalInfoForm.classList.add('active');
                    this.style.display = 'none';
                });
                
                cancelEditPersonalInfo.addEventListener('click', function() {
                    editPersonalInfoForm.classList.remove('active');
                    editPersonalInfoBtn.style.display = 'inline-block';
                });
            }
            
            // Toggle change password form
            const changePasswordBtn = document.getElementById('changePasswordBtn');
            const changePasswordForm = document.getElementById('changePasswordForm');
            const cancelChangePassword = document.getElementById('cancelChangePassword');
            
            if (changePasswordBtn && changePasswordForm && cancelChangePassword) {
                changePasswordBtn.addEventListener('click', function() {
                    changePasswordForm.classList.add('active');
                    this.style.display = 'none';
                });
                
                cancelChangePassword.addEventListener('click', function() {
                    changePasswordForm.classList.remove('active');
                    changePasswordBtn.style.display = 'inline-block';
                });
            }
        });
    </script>
