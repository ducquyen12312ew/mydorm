<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trạng thái phòng - KTX HUST</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;600;700;800;900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/student.css">

<!-- Style riêng -->
<style>
    /* Filter tabs */
    .filter-tabs {
        display: flex;
        gap: 0.25rem;
        margin-bottom: 1.5rem;
        background: var(--bg-gray);
        padding: 0.25rem;
        border-radius: 8px;
    }
    
    .filter-tab {
        flex: 1;
        padding: 0.5rem 1rem;
        background: transparent;
        border: none;
        border-radius: 6px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s ease;
    }
    
    .filter-tab.active {
        background: var(--primary-color);
        color: white;
    }
    
    /* Room info grid */
    .room-info {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
    }
    
    .roommates-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
    }
    
    /* Application history layout */
    .application-item {
        background: var(--bg-light);
        border-radius: 8px;
        padding: 1.25rem;
        border: 1px solid var(--border-color);
        transition: all 0.3s ease;
    }
    
    .application-item:hover {
        border-color: var(--primary-color);
        transform: translateX(5px);
    }
    
    /* Status badges colors */
    .status-pending {
        background: #fef3c7;
        color: #92400e;
    }
    
    .status-approved {
        background: #d1fae5;
        color: #065f46;
    }
    
    .status-rejected {
        background: #fee2e2;
        color: #991b1b;
    }
</style>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="header-logo">
            <img src="image/logo.png" alt="HUST Logo">
        </div>
        <div class="menu-toggle" id="menuToggle">
            <span></span>
            <span></span>
            <span></span>
        </div>
        <div class="nav-container" id="navContainer">
            <nav class="nav-links">
                <a href="/" class="nav-link">TRANG CHỦ</a>
                <a href="/map" class="nav-link">BẢN ĐỒ</a>
                <a href="/register" class="nav-link">ĐĂNG KÝ PHÒNG</a>
                <a href="/room-status" class="nav-link active-link">TRẠNG THÁI PHÒNG</a>
            </nav>
            
            <!-- User profile dropdown -->
            <div class="user-profile">
                <a href="/profile" class="avatar-container" title="Xem hồ sơ">
                    <div class="avatar">
                        <% if (user && user.name) { %>
                            <%= user.name.charAt(0).toUpperCase() %>
                        <% } else { %>
                            U
                        <% } %>
                    </div>
                    <span class="user-name">
                        <% if (user && user.name) { %>
                            <%= user.name %>
                        <% } else { %>
                            Người dùng
                        <% } %>
                    </span>
                </a>
                <div class="dropdown-menu">
                    <a href="/profile" class="dropdown-item">
                        <i class="fas fa-user-circle"></i> Hồ sơ
                    </a>
                    <a href="/logout" class="dropdown-item">
                        <i class="fas fa-sign-out-alt"></i> Đăng xuất
                    </a>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Page Header -->
        <div class="page-header">
            <div class="container">
                <h1 class="page-title">Trạng thái phòng</h1>
                <p class="page-subtitle">Xem thông tin phòng hiện tại và lịch sử đăng ký ký túc xá</p>
            </div>
        </div>

        <!-- Content -->
        <div class="content-section">
            <div class="container">
                <div class="grid grid-cols-1">
                    <!-- Current Room -->
                    <div class="card">
                        <div class="card-header">
                            <div class="card-icon">
                                <i class="fas fa-home"></i>
                            </div>
                            <h2 class="card-title">Phòng hiện tại</h2>
                        </div>
                        <div class="card-content">
                            <div id="currentRoomContent">
                                <div class="loading-state">
                                    <div class="spinner"></div>
                                    <p>Đang tải thông tin phòng...</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Application History -->
                    <div class="card">
                        <div class="card-header">
                            <div class="card-icon">
                                <i class="fas fa-history"></i>
                            </div>
                            <h2 class="card-title">Lịch sử đăng ký</h2>
                        </div>
                        <div class="card-content">
                            <div class="filter-tabs">
                                <button class="filter-tab active" data-status="all">Tất cả</button>
                                <button class="filter-tab" data-status="pending">Chờ duyệt</button>
                                <button class="filter-tab" data-status="approved">Đã duyệt</button>
                                <button class="filter-tab" data-status="rejected">Bị từ chối</button>
                            </div>
                            
                            <div id="applicationsList">
                                <div class="loading-state">
                                    <div class="spinner"></div>
                                    <p>Đang tải lịch sử đăng ký...</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/student-common.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Mobile menu toggle
            const menuToggle = document.getElementById('menuToggle');
            const navContainer = document.getElementById('navContainer');
            
            if (menuToggle && navContainer) {
                menuToggle.addEventListener('click', function() {
                    navContainer.classList.toggle('active');
                    this.classList.toggle('active');
                });
            }

            loadCurrentRoom();
            loadApplicationHistory();
            
            // Tab functionality
            const filterTabs = document.querySelectorAll('.filter-tab');
            filterTabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    filterTabs.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                    filterApplications(this.dataset.status);
                });
            });
        });

        let allApplications = [];

        // Load current room information
        async function loadCurrentRoom() {
            try {
                const response = await fetch('/api/student/current-room');
                const data = await response.json();
                
                const currentRoomContent = document.getElementById('currentRoomContent');
                
                if (data.success && data.room) {
                    currentRoomContent.innerHTML = renderCurrentRoom(data.room);
                } else {
                    currentRoomContent.innerHTML = renderNoRoom();
                }
            } catch (error) {
                console.error('Error loading current room:', error);
                document.getElementById('currentRoomContent').innerHTML = 
                    '<div class="empty-state"><i class="fas fa-exclamation-triangle empty-icon"></i><div class="empty-title">Lỗi tải dữ liệu</div><div class="empty-text">Không thể tải thông tin phòng hiện tại</div></div>';
            }
        }

        // Load application history
        async function loadApplicationHistory() {
            try {
                const response = await fetch('/api/student/applications');
                const data = await response.json();
                
                if (data.success && data.applications) {
                    allApplications = data.applications;
                    renderApplications(allApplications);
                } else {
                    renderEmptyApplications();
                }
            } catch (error) {
                console.error('Error loading applications:', error);
                document.getElementById('applicationsList').innerHTML = 
                    '<div class="empty-state"><i class="fas fa-exclamation-triangle empty-icon"></i><div class="empty-title">Lỗi tải dữ liệu</div><div class="empty-text">Không thể tải lịch sử đăng ký</div></div>';
            }
        }

        // Render current room
        function renderCurrentRoom(room) {
            return `
                <div class="room-info">
                    <div class="info-item">
                        <div class="info-label">Ký túc xá</div>
                        <div class="info-value">${room.dormitoryName}</div>
                    </div>
                    
                    <div class="info-item">
                        <div class="info-label">Phòng</div>
                        <div class="info-value">${room.roomNumber}</div>
                    </div>
                    
                    <div class="info-item">
                        <div class="info-label">Sức chứa</div>
                        <div class="info-value">${room.currentOccupants}/${room.maxCapacity} sinh viên</div>
                    </div>
                    
                    <div class="info-item">
                        <div class="info-label">Ngày vào ở</div>
                        <div class="info-value">${formatDate(room.checkInDate)}</div>
                    </div>
                </div>
                
                ${room.roommates && room.roommates.length > 0 ? `
                    <div class="roommates-section">
                        <div class="section-title">
                            <i class="fas fa-users"></i>
                            Bạn cùng phòng (${room.roommates.length})
                        </div>
                        <div class="roommates-list">
                            ${room.roommates.map(roommate => `
                                <div class="roommate-item">
                                    <div class="roommate-avatar">
                                        ${roommate.name.charAt(0).toUpperCase()}
                                    </div>
                                    <div class="roommate-info">
                                        <h4>${roommate.name}</h4>
                                        <p>${roommate.studentId}</p>
                                    </div>
                                </div>
                            `).join('')}
                        </div>
                    </div>
                ` : ''}
            `;
        }

        // Render no room state
        function renderNoRoom() {
            return `
                <div class="no-room-state">
                    <div class="no-room-icon">
                        <i class="fas fa-home"></i>
                    </div>
                    <div class="no-room-title">Chưa có phòng ở</div>
                    <div class="no-room-text">Bạn chưa được phân phòng ký túc xá. Hãy đăng ký ngay để có chỗ ở tại trường.</div>
                    <a href="/register" class="btn">
                        <i class="fas fa-plus"></i>
                        Đăng ký phòng ngay
                    </a>
                </div>
            `;
        }

        // Render applications
        function renderApplications(applications) {
            const applicationsList = document.getElementById('applicationsList');
            
            if (applications.length === 0) {
                renderEmptyApplications();
                return;
            }

            applicationsList.innerHTML = `
                <div class="applications-list">
                    ${applications.map(app => `
                        <div class="application-item">
                            <div class="application-header">
                                <div class="application-id">
                                    Mã đơn: ${app._id}
                                </div>
                                <span class="status-badge status-${app.status}">
                                    ${getStatusText(app.status)}
                                </span>
                            </div>
                            
                            <div class="application-details">
                                <div class="detail-item">
                                    <span class="detail-label">Ký túc xá</span>
                                    <span class="detail-value">${app.dormitoryName}</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Phòng</span>
                                    <span class="detail-value">${app.roomNumber}</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Khoa/Viện</span>
                                    <span class="detail-value">${app.faculty}</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Năm học</span>
                                    <span class="detail-value">${app.academicYear}</span>
                                </div>
                            </div>
                            
                            ${app.comments ? `
                                <div class="comments-section">
                                    <div class="comments-title">Ghi chú từ admin:</div>
                                    <div class="comments-text">${app.comments}</div>
                                </div>
                            ` : ''}
                            
                            <div class="application-date">
                                <i class="fas fa-clock"></i>
                                Đăng ký lúc: ${formatDateTime(app.createdAt)}
                            </div>
                        </div>
                    `).join('')}
                </div>
            `;
        }

        // Render empty applications
        function renderEmptyApplications() {
            document.getElementById('applicationsList').innerHTML = `
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="fas fa-file-alt"></i>
                    </div>
                    <div class="empty-title">Chưa có đơn đăng ký</div>
                    <div class="empty-text">Bạn chưa gửi đơn đăng ký phòng ký túc xá nào.</div>
                </div>
            `;
        }

        // Filter applications by status
        function filterApplications(status) {
            if (status === 'all') {
                renderApplications(allApplications);
            } else {
                const filtered = allApplications.filter(app => app.status === status);
                renderApplications(filtered);
            }
        }

        // Utility functions
        function getStatusText(status) {
            const statusMap = {
                'pending': 'Chờ duyệt',
                'approved': 'Đã duyệt',
                'rejected': 'Bị từ chối'
            };
            return statusMap[status] || 'Không xác định';
        }

        function formatDate(dateString) {
            if (!dateString) return 'Chưa cập nhật';
            const date = new Date(dateString);
            return date.toLocaleDateString('vi-VN', {
                year: 'numeric',
                month: '2-digit',
                day: '2-digit'
            });
        }

        function formatDateTime(dateString) {
            if (!dateString) return 'Chưa cập nhật';
            const date = new Date(dateString);
            return date.toLocaleDateString('vi-VN', {
                year: 'numeric',
                month: '2-digit',
                day: '2-digit',
                hour: '2-digit',
                minute: '2-digit'
            });
        }
    </script>
</body>
</html>