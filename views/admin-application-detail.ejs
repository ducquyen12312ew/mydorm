<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi Tiết Đơn Đăng Ký - KTX HUST</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        :root {
            --primary-color: #e61a1a;
            --primary-hover: #c01515;
            --text-dark: #2c3e50;
            --text-light: #7f8c8d;
            --bg-light: #f8f9fa;
            --border-color: #e9ecef;
            --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.08);
            --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.1);
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f7fa;
            color: var(--text-dark);
        }

        .admin-header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background: white;
            z-index: 1000;
            box-shadow: var(--shadow-sm);
        }

        .admin-header-container {
            max-width: 1600px;
            margin: 0 auto;
            padding: 0 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 70px;
        }

        .admin-logo {
            display: flex;
            align-items: center;
            gap: 12px;
            text-decoration: none;
        }

        .admin-logo img {
            height: 40px;
            width: auto;
        }

        .admin-logo-text {
            font-size: 1.4rem;
            font-weight: 700;
            color: var(--primary-color);
        }

        .admin-nav {
            display: flex;
            align-items: center;
            gap: 3rem;
            flex: 1;
            margin: 0 3rem;
        }

        .admin-nav-links {
            display: flex;
            gap: 2.5rem;
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .admin-nav-link {
            color: var(--text-dark);
            text-decoration: none;
            font-size: 0.95rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            padding: 0.5rem 0;
            position: relative;
            transition: color 0.3s ease;
        }

        .admin-nav-link::before {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 0;
            height: 3px;
            background: var(--primary-color);
            transition: width 0.3s ease;
        }

        .admin-nav-link:hover {
            color: var(--primary-color);
        }

        .admin-nav-link:hover::before {
            width: 100%;
        }

        .admin-nav-link.active {
            color: var(--primary-color);
        }

        .admin-nav-link.active::before {
            width: 100%;
        }

        .admin-user-section {
            display: flex;
            align-items: center;
        }

        .admin-user-profile {
            display: flex;
            align-items: center;
            gap: 12px;
            cursor: pointer;
            padding: 0.5rem 1rem;
            border-radius: 50px;
            transition: all 0.3s ease;
        }

        .admin-user-avatar {
            width: 42px;
            height: 42px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary-color), #ff6b6b);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 700;
            font-size: 1.1rem;
            box-shadow: var(--shadow-sm);
        }

        .admin-content {
            padding-top: 90px;
            min-height: calc(100vh - 70px);
            padding-bottom: 2rem;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 2rem;
        }

        .page-header {
            background: white;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: var(--shadow-sm);
            margin-bottom: 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .page-header h1 {
            color: var(--text-dark);
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .page-header p {
            color: var(--text-light);
            margin: 0;
        }

        .page-header .btn {
            padding: 0.5rem 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-weight: 600;
            border-radius: 8px;
            transition: all 0.2s ease;
        }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

        .btn-primary:hover {
            background-color: var(--primary-hover);
            border-color: var(--primary-hover);
        }

        .btn-outline-secondary {
            color: var(--text-dark);
            border-color: var(--border-color);
        }

        .btn-outline-secondary:hover {
            background-color: var(--bg-light);
            color: var(--text-dark);
            border-color: var(--border-color);
        }

        .detail-container {
            background: white;
            border-radius: 12px;
            box-shadow: var(--shadow-sm);
            overflow: hidden;
            margin-bottom: 2rem;
        }

        .detail-header {
            padding: 1.5rem 2rem;
            border-bottom: 1px solid var(--border-color);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .detail-header h2 {
            font-size: 1.25rem;
            color: var(--text-dark);
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .detail-header .status-badge {
            display: inline-block;
            padding: 0.35rem 0.75rem;
            border-radius: 50px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .status-pending {
            background-color: #fff8e1;
            color: #f57c00;
        }

        .status-approved {
            background-color: #e8f5e9;
            color: #2e7d32;
        }

        .status-rejected {
            background-color: #ffebee;
            color: #c62828;
        }

        .status-waitlist {
            background-color: #e3f2fd;
            color: #1565c0;
        }

        .detail-content {
            padding: 2rem;
        }

        .detail-section {
            margin-bottom: 2rem;
        }

        .detail-section:last-child {
            margin-bottom: 0;
        }

        .detail-section h3 {
            font-size: 1.1rem;
            color: var(--text-dark);
            margin-bottom: 1.25rem;
            padding-bottom: 0.75rem;
            border-bottom: 1px solid var(--border-color);
        }

        .detail-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .detail-row:last-child {
            margin-bottom: 0;
        }

        .detail-item {
            display: flex;
            flex-direction: column;
            gap: 0.35rem;
        }

        .detail-label {
            font-size: 0.85rem;
            color: var(--text-light);
            margin: 0;
        }

        .detail-value {
            font-size: 1rem;
            color: var(--text-dark);
            font-weight: 500;
            margin: 0;
        }

        .action-footer {
            padding: 1.5rem 2rem;
            background-color: var(--bg-light);
            border-top: 1px solid var(--border-color);
            display: flex;
            justify-content: flex-end;
            gap: 1rem;
        }

        .warning-box {
            background-color: #fff8e1;
            color: #f57c00;
            border-radius: 8px;
            padding: 1.25rem;
            margin-bottom: 1.5rem;
            display: flex;
            gap: 1rem;
            align-items: flex-start;
        }

        .warning-box.error {
            background-color: #ffebee;
            color: #c62828;
        }

        .warning-box i {
            font-size: 1.5rem;
        }

        .warning-box p {
            margin: 0;
        }

        .warning-box strong {
            display: block;
            margin-bottom: 0.35rem;
        }

        .comments-section {
            background-color: var(--bg-light);
            border-radius: 8px;
            padding: 1.5rem;
        }

        .comments-section h4 {
            font-size: 1rem;
            color: var(--text-dark);
            margin-bottom: 1rem;
        }

        .comment-input {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
        }

        .comment-input textarea {
            border: 1px solid var(--border-color);
            border-radius: 8px;
            padding: 0.75rem;
            resize: vertical;
            min-height: 100px;
        }

        .loading-spinner {
            text-align: center;
            padding: 3rem;
        }

        .spinner {
            width: 50px;
            height: 50px;
            border: 3px solid #f3f3f3;
            border-radius: 50%;
            border-top: 3px solid var(--primary-color);
            animation: spin 1s linear infinite;
            margin: 0 auto 1rem;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* Responsive */
        @media (max-width: 768px) {
            .page-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }
            
            .detail-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }
            
            .action-footer {
                flex-direction: column;
            }
            
            .action-footer .btn {
                width: 100%;
            }
        }

        /* Toast Notifications */
        .toast-container {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 9999;
        }

        .toast {
            background-color: white;
            border-radius: 8px;
            box-shadow: var(--shadow-md);
            margin-bottom: 10px;
            overflow: hidden;
            animation: fadeIn 0.3s;
        }

        .toast-header {
            padding: 12px 15px;
            display: flex;
            align-items: center;
            border-bottom: 1px solid var(--border-color);
        }

        .toast-body {
            padding: 15px;
        }

        .toast-success .toast-header {
            background-color: #e8f5e9;
            color: #2e7d32;
        }

        .toast-error .toast-header {
            background-color: #ffebee;
            color: #c62828;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
</head>
<body>
    <!-- ADMIN HEADER -->
    <header class="admin-header">
        <div class="admin-header-container">
            <a href="/admin/dashboard" class="admin-logo">
                <img src="/image/logo.png" alt="Logo KTX">
                <span class="admin-logo-text">KTX HUST</span>
            </a>

            <nav class="admin-nav">
                <ul class="admin-nav-links">
                    <li><a href="/admin/dashboard" class="admin-nav-link"><i class="fas fa-chart-line"></i> Dashboard</a></li>
                    <li><a href="/admin/dormitories" class="admin-nav-link"><i class="fas fa-building"></i> Danh sách KTX</a></li>
                    <li><a href="/admin/application" class="admin-nav-link active"><i class="fas fa-file-alt"></i> Đơn đăng ký</a></li>
                    <li><a href="/admin/logs" class="admin-nav-link"><i class="fas fa-history"></i> Nhật ký</a></li>
                </ul>
                
                <div class="admin-user-section">
                    <div class="admin-user-profile">
                        <div class="admin-user-avatar">
                            <%= user.name ? user.name.charAt(0).toUpperCase() : 'A' %>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </header>

    <!-- MAIN CONTENT -->
    <div class="admin-content">
        <div class="container">
            <div class="page-header">
                <div>
                    <h1><i class="fas fa-file-alt"></i> Chi Tiết Đơn Đăng Ký</h1>
                    <p>Xem thông tin chi tiết và xử lý đơn đăng ký</p>
                </div>
                <div>
                    <a href="/admin/application" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </div>

            <div id="loading-container" class="loading-spinner">
                <div class="spinner"></div>
                <p>Đang tải dữ liệu...</p>
            </div>

            <div id="application-details" style="display: none;">
                <!-- Application details will be filled with JavaScript -->
            </div>
        </div>
    </div>
    
    <!-- Reject Modal -->
    <div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="rejectModalLabel">Từ chối đơn đăng ký</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="rejectionReason" class="form-label">Lý do từ chối:</label>
                        <textarea class="form-control" id="rejectionReason" rows="3" placeholder="Nhập lý do từ chối đơn đăng ký..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="button" class="btn btn-danger" id="confirmRejectBtn">Từ chối đơn</button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Approve Modal -->
    <div class="modal fade" id="approveModal" tabindex="-1" aria-labelledby="approveModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="approveModalLabel">Duyệt đơn đăng ký</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc chắn muốn duyệt đơn đăng ký này không?</p>
                    <p>Sinh viên sẽ được thông báo và có thể tiến hành các bước tiếp theo.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="button" class="btn btn-success" id="confirmApproveBtn">Duyệt đơn</button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Assign Room Modal -->
    <div class="modal fade" id="assignRoomModal" tabindex="-1" aria-labelledby="assignRoomModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="assignRoomModalLabel">Phân phòng</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Xác nhận phân phòng cho sinh viên này?</p>
                    <p>Sinh viên sẽ được gán vào phòng và nhận thông báo qua email.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="button" class="btn btn-primary" id="confirmAssignBtn">Xác nhận</button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Toast Notifications -->
    <div class="toast-container" id="toastContainer"></div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Get application ID from URL
            const pathParts = window.location.pathname.split('/');
            const applicationId = pathParts[pathParts.length - 1];
            
            // Elements
            const loadingContainer = document.getElementById('loading-container');
            const applicationDetails = document.getElementById('application-details');
            const rejectModal = new bootstrap.Modal(document.getElementById('rejectModal'));
            const approveModal = new bootstrap.Modal(document.getElementById('approveModal'));
            const assignRoomModal = new bootstrap.Modal(document.getElementById('assignRoomModal'));
            const rejectionReason = document.getElementById('rejectionReason');
            const confirmRejectBtn = document.getElementById('confirmRejectBtn');
            const confirmApproveBtn = document.getElementById('confirmApproveBtn');
            const confirmAssignBtn = document.getElementById('confirmAssignBtn');
            
            // Fetch application details
            function fetchApplicationDetails() {
                showLoading();
                
                fetch(`/api/admin/applications/${applicationId}`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.success && data.application) {
                            renderApplicationDetails(data.application);
                        } else {
                            showToast('error', 'Lỗi', data.error || 'Không thể tải thông tin đơn đăng ký');
                        }
                    })
                    .catch(error => {
                        console.error('Error fetching application details:', error);
                        showToast('error', 'Lỗi', 'Lỗi kết nối máy chủ');
                    });
            }
            
            // Render application details
            function renderApplicationDetails(application) {
                // Format date
                const createdAt = new Date(application.createdAt);
                const formattedDate = `${createdAt.getDate()}/${createdAt.getMonth() + 1}/${createdAt.getFullYear()}`;
                
                // Get status class and text
                let statusClass = '';
                let statusText = '';
                
                switch (application.status) {
                    case 'pending':
                    case 'pending_review':
                        statusClass = 'status-pending';
                        statusText = 'Chờ duyệt';
                        break;
                    case 'approved':
                    case 'approved_waiting_payment':
                        statusClass = 'status-approved';
                        statusText = 'Đã duyệt';
                        break;
                    case 'rejected':
                        statusClass = 'status-rejected';
                        statusText = 'Từ chối';
                        break;
                    case 'waitlist':
                        statusClass = 'status-waitlist';
                        statusText = 'Chờ phân phòng';
                        break;
                    case 'assigned_room':
                        statusClass = 'status-approved';
                        statusText = 'Đã phân phòng';
                        break;
                    case 'checked_in':
                        statusClass = 'status-approved';
                        statusText = 'Đã check-in';
                        break;
                    case 'checked_out':
                        statusClass = 'status-rejected';
                        statusText = 'Đã check-out';
                        break;
                    case 'expired':
                        statusClass = 'status-rejected';
                        statusText = 'Hết hạn';
                        break;
                    default:
                        statusClass = 'status-pending';
                        statusText = 'Không xác định';
                }
                
                // Check if there are any warnings
                let warningHtml = '';
                
                // Check if student already exists in system
                if (application.studentExistsInfo) {
                    const location = application.studentExistsInfo;
                    warningHtml = `
                        <div class="warning-box error">
                            <i class="fas fa-exclamation-triangle"></i>
                            <div>
                                <strong>Sinh viên đã tồn tại trong hệ thống</strong>
                                <p>Sinh viên này đã được đăng ký tại ${location.dormitoryName} - Tầng ${location.floorNumber} - Phòng ${location.roomNumber}. Không thể duyệt đơn đăng ký này!</p>
                            </div>
                        </div>
                    `;
                }
                
                // Check if room is full
                if (application.isRoomFull) {
                    warningHtml += `
                        <div class="warning-box error">
                            <i class="fas fa-exclamation-triangle"></i>
                            <div>
                                <strong>Phòng đã đầy</strong>
                                <p>Phòng ${application.roomNumber} hiện đã đầy (${application.currentOccupants}/${application.roomCapacity} chỗ). Không thể duyệt đơn đăng ký này!</p>
                            </div>
                        </div>
                    `;
                }
                
                // Create content
                applicationDetails.innerHTML = `
                    <div class="detail-container">
                        <div class="detail-header">
                            <h2>
                                <i class="fas fa-file-alt"></i> 
                                Đơn đăng ký #${application._id.substring(0, 8)}
                                <span class="status-badge ${statusClass}">${statusText}</span>
                            </h2>
                            <div>
                                <span class="text-muted">Ngày đăng ký: ${formattedDate}</span>
                            </div>
                        </div>
                        
                        <div class="detail-content">
                            ${warningHtml}
                            
                            <div class="detail-section">
                                <h3>Thông tin sinh viên</h3>
                                <div class="detail-row">
                                    <div class="detail-item">
                                        <p class="detail-label">Mã sinh viên</p>
                                        <p class="detail-value">${application.studentId || '-'}</p>
                                    </div>
                                    <div class="detail-item">
                                        <p class="detail-label">Họ và tên</p>
                                        <p class="detail-value">${application.fullName || '-'}</p>
                                    </div>
                                    <div class="detail-item">
                                        <p class="detail-label">Email</p>
                                        <p class="detail-value">${application.email || '-'}</p>
                                    </div>
                                </div>
                                <div class="detail-row">
                                    <div class="detail-item">
                                        <p class="detail-label">Số điện thoại</p>
                                        <p class="detail-value">${application.phone || '-'}</p>
                                    </div>
                                    <div class="detail-item">
                                        <p class="detail-label">Khoa</p>
                                        <p class="detail-value">${application.faculty || '-'}</p>
                                    </div>
                                    <div class="detail-item">
                                        <p class="detail-label">Niên khóa</p>
                                        <p class="detail-value">${application.academicYear || '-'}</p>
                                    </div>
                                </div>
                                <div class="detail-row">
                                    <div class="detail-item">
                                        <p class="detail-label">Giới tính</p>
                                        <p class="detail-value">${application.gender === 'male' ? 'Nam' : application.gender === 'female' ? 'Nữ' : '-'}</p>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="detail-section">
                                <h3>Thông tin đăng ký</h3>
                                <div class="detail-row">
                                    <div class="detail-item">
                                        <p class="detail-label">Ký túc xá</p>
                                        <p class="detail-value">${application.dormitoryName || '-'}</p>
                                    </div>
                                    <div class="detail-item">
                                        <p class="detail-label">Phòng</p>
                                        <p class="detail-value">${application.roomNumber || '-'}</p>
                                    </div>
                                    <div class="detail-item">
                                        <p class="detail-label">Sức chứa phòng</p>
                                        <p class="detail-value">${application.roomCapacity || '-'} người (Hiện tại: ${application.currentOccupants || '0'})</p>
                                    </div>
                                </div>
                                <div class="detail-row">
                                    <div class="detail-item">
                                        <p class="detail-label">Loại phòng ưu tiên</p>
                                        <p class="detail-value">${application.roomType || 'Không có ưu tiên'}</p>
                                    </div>
                                    <div class="detail-item">
                                        <p class="detail-label">Chính sách giới tính ưu tiên</p>
                                        <p class="detail-value">${application.preferredGenderPolicy === 'male' ? 'Nam' : application.preferredGenderPolicy === 'female' ? 'Nữ' : 'Không có ưu tiên'}</p>
                                    </div>
                                </div>
                            </div>
                            
                            ${application.comments ? `
                                <div class="detail-section">
                                    <h3>Ghi chú</h3>
                                    <div class="comments-section">
                                        <p>${application.comments}</p>
                                    </div>
                                </div>
                            ` : ''}
                            
                            ${application.status === 'rejected' ? `
                                <div class="detail-section">
                                    <h3>Lý do từ chối</h3>
                                    <div class="comments-section">
                                        <p>${application.rejectionReason || 'Không có lý do cụ thể'}</p>
                                    </div>
                                </div>
                            ` : ''}
                            
                            ${application.status === 'approved_waiting_payment' || application.status === 'assigned_room' || application.status === 'checked_in' ? `
                                <div class="detail-section">
                                    <h3>Thông tin thanh toán</h3>
                                    <div class="detail-row">
                                        <div class="detail-item">
                                            <p class="detail-label">Trạng thái thanh toán</p>
                                            <p class="detail-value">${application.payment && application.payment.paid ? '<span class="text-success">Đã thanh toán</span>' : '<span class="text-danger">Chưa thanh toán</span>'}</p>
                                        </div>
                                        ${application.payment && application.payment.paid ? `
                                            <div class="detail-item">
                                                <p class="detail-label">Số tiền</p>
                                                <p class="detail-value">${application.payment.amount ? application.payment.amount.toLocaleString() + ' VNĐ' : '-'}</p>
                                            </div>
                                            <div class="detail-item">
                                                <p class="detail-label">Phương thức</p>
                                                <p class="detail-value">${application.payment.method || '-'}</p>
                                            </div>
                                        ` : ''}
                                    </div>
                                </div>
                            ` : ''}
                        </div>
                        
                        <div class="action-footer">
                            ${application.status === 'pending' || application.status === 'pending_review' ? `
                                ${!application.studentExistsInfo && !application.isRoomFull ? `
                                    <button class="btn btn-success" id="approveBtn">
                                        <i class="fas fa-check"></i> Duyệt đơn
                                    </button>
                                ` : ''}
                                <button class="btn btn-danger" id="rejectBtn">
                                    <i class="fas fa-times"></i> Từ chối
                                </button>
                            ` : ''}
                            
                            ${application.status === 'approved_waiting_payment' && !application.payment?.paid ? `
                                <button class="btn btn-primary" id="confirmPaymentBtn">
                                    <i class="fas fa-credit-card"></i> Xác nhận thanh toán
                                </button>
                            ` : ''}
                            
                            ${application.status === 'approved_waiting_payment' && application.payment?.paid ? `
                                <button class="btn btn-primary" id="assignRoomBtn">
                                    <i class="fas fa-door-open"></i> Phân phòng
                                </button>
                            ` : ''}
                            
                            ${application.status === 'assigned_room' ? `
                                <button class="btn btn-success" id="checkInBtn">
                                    <i class="fas fa-sign-in-alt"></i> Check-in
                                </button>
                            ` : ''}
                            
                            ${application.status === 'checked_in' ? `
                                <button class="btn btn-warning" id="checkOutBtn">
                                    <i class="fas fa-sign-out-alt"></i> Check-out
                                </button>
                            ` : ''}
                        </div>
                    </div>
                `;
                
                // Add event listeners
                if (application.status === 'pending' || application.status === 'pending_review') {
                    if (!application.studentExistsInfo && !application.isRoomFull) {
                        document.getElementById('approveBtn').addEventListener('click', function() {
                            approveModal.show();
                        });
                    }
                    
                    document.getElementById('rejectBtn').addEventListener('click', function() {
                        rejectModal.show();
                    });
                    
                    // Approve application
                    confirmApproveBtn.onclick = function() {
                        approveApplication(applicationId);
                    };
                    
                    // Reject application
                    confirmRejectBtn.onclick = function() {
                        const reason = rejectionReason.value;
                        if (!reason.trim()) {
                            alert('Vui lòng nhập lý do từ chối.');
                            return;
                        }
                        rejectApplication(applicationId, reason);
                    };
                }
                
                // Confirm payment button
                if (application.status === 'approved_waiting_payment' && !application.payment?.paid) {
                    document.getElementById('confirmPaymentBtn').addEventListener('click', function() {
                        confirmPayment(applicationId);
                    });
                }
                
                // Assign room button
                if (application.status === 'approved_waiting_payment' && application.payment?.paid) {
                    document.getElementById('assignRoomBtn').addEventListener('click', function() {
                        assignRoomModal.show();
                    });
                    
                    confirmAssignBtn.onclick = function() {
                        assignRoom(applicationId);
                    };
                }
                
                // Check-in button
                if (application.status === 'assigned_room') {
                    document.getElementById('checkInBtn').addEventListener('click', function() {
                        checkIn(applicationId);
                    });
                }
                
                // Check-out button
                if (application.status === 'checked_in') {
                    document.getElementById('checkOutBtn').addEventListener('click', function() {
                        checkOut(applicationId);
                    });
                }
                
                // Show details and hide loading
                hideLoading();
                applicationDetails.style.display = 'block';
            }
            
            // Actions
            function approveApplication(applicationId) {
                fetch('/admin/approve-application', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        applicationId,
                        action: 'approve'
                    })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showToast('success', 'Thành công', data.message || 'Đã duyệt đơn đăng ký thành công!');
                        setTimeout(() => fetchApplicationDetails(), 2000); // Reload data after 2 seconds
                    } else {
                        showToast('error', 'Lỗi', data.message || 'Lỗi khi duyệt đơn đăng ký.');
                    }
                    approveModal.hide();
                })
                .catch(error => {
                    console.error('Error approving application:', error);
                    showToast('error', 'Lỗi', 'Lỗi kết nối máy chủ.');
                    approveModal.hide();
                });
            }
            
            function rejectApplication(applicationId, reason) {
                fetch('/admin/approve-application', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        applicationId,
                        action: 'reject',
                        rejectionReason: reason
                    })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showToast('success', 'Thành công', data.message || 'Đã từ chối đơn đăng ký thành công!');
                        setTimeout(() => fetchApplicationDetails(), 2000); // Reload data after 2 seconds
                    } else {
                        showToast('error', 'Lỗi', data.message || 'Lỗi khi từ chối đơn đăng ký.');
                    }
                    rejectModal.hide();
                })
                .catch(error => {
                    console.error('Error rejecting application:', error);
                    showToast('error', 'Lỗi', 'Lỗi kết nối máy chủ.');
                    rejectModal.hide();
                });
            }
            
            function confirmPayment(applicationId) {
                fetch(`/api/admin/applications/${applicationId}/confirm-payment`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        amount: 1500000, // Default amount
                        method: 'admin_confirmation'
                    })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success || data.ok) {
                        showToast('success', 'Thành công', 'Đã xác nhận thanh toán thành công!');
                        setTimeout(() => fetchApplicationDetails(), 2000); // Reload data after 2 seconds
                    } else {
                        showToast('error', 'Lỗi', data.message || data.error || 'Lỗi khi xác nhận thanh toán.');
                    }
                })
                .catch(error => {
                    console.error('Error confirming payment:', error);
                    showToast('error', 'Lỗi', 'Lỗi kết nối máy chủ.');
                });
            }
            
            function assignRoom(applicationId) {
                fetch(`/api/admin/applications/${applicationId}/assign`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({})
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success || data.ok) {
                        showToast('success', 'Thành công', 'Đã phân phòng thành công!');
                        setTimeout(() => fetchApplicationDetails(), 2000); // Reload data after 2 seconds
                    } else {
                        showToast('error', 'Lỗi', data.message || data.error || 'Lỗi khi phân phòng.');
                    }
                    assignRoomModal.hide();
                })
                .catch(error => {
                    console.error('Error assigning room:', error);
                    showToast('error', 'Lỗi', 'Lỗi kết nối máy chủ.');
                    assignRoomModal.hide();
                });
            }
            
            function checkIn(applicationId) {
                fetch(`/api/admin/applications/${applicationId}/check-in`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({})
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success || data.ok) {
                        showToast('success', 'Thành công', 'Đã check-in thành công!');
                        setTimeout(() => fetchApplicationDetails(), 2000); // Reload data after 2 seconds
                    } else {
                        showToast('error', 'Lỗi', data.message || data.error || 'Lỗi khi check-in.');
                    }
                })
                .catch(error => {
                    console.error('Error checking in:', error);
                    showToast('error', 'Lỗi', 'Lỗi kết nối máy chủ.');
                });
            }
            
            function checkOut(applicationId) {
                fetch(`/api/admin/applications/${applicationId}/check-out`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({})
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success || data.ok) {
                        showToast('success', 'Thành công', 'Đã check-out thành công!');
                        setTimeout(() => fetchApplicationDetails(), 2000); // Reload data after 2 seconds
                    } else {
                        showToast('error', 'Lỗi', data.message || data.error || 'Lỗi khi check-out.');
                    }
                })
                .catch(error => {
                    console.error('Error checking out:', error);
                    showToast('error', 'Lỗi', 'Lỗi kết nối máy chủ.');
                });
            }
            
            // UI helper functions
            function showLoading() {
                loadingContainer.style.display = 'block';
                applicationDetails.style.display = 'none';
            }
            
            function hideLoading() {
                loadingContainer.style.display = 'none';
            }
            
            function showToast(type, title, message) {
                const toastContainer = document.getElementById('toastContainer');
                const toastId = 'toast-' + Date.now();
                
                const toastHtml = `
                    <div class="toast toast-${type}" id="${toastId}">
                        <div class="toast-header">
                            <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'} me-2"></i>
                            <strong>${title}</strong>
                            <button type="button" class="btn-close ms-auto" onclick="document.getElementById('${toastId}').remove();"></button>
                        </div>
                        <div class="toast-body">
                            ${message}
                        </div>
                    </div>
                `;
                
                toastContainer.insertAdjacentHTML('beforeend', toastHtml);
                
                // Auto-remove after 5 seconds
                setTimeout(() => {
                    const toast = document.getElementById(toastId);
                    if (toast) toast.remove();
                }, 5000);
            }
            
            // Initialize
            fetchApplicationDetails();
        });
    </script>
</body>
